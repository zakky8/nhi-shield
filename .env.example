# ============================================================
# NHI Shield — Environment Configuration
# Copy this file to .env and fill in your real values.
# NEVER commit .env to git (it is in .gitignore).
# ============================================================

# ── Node / App ──────────────────────────────────────────────
NODE_ENV=production
API_PORT=3000
LOG_LEVEL=info

# ── PostgreSQL ───────────────────────────────────────────────
DB_PASSWORD=CHANGE_ME_strong_password_here
DATABASE_URL=postgresql://nhiadmin:CHANGE_ME_strong_password_here@localhost:5432/nhishield

# ── Neo4j ────────────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_neo4j_password_here

# ── Redis ────────────────────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_redis_password_here
REDIS_URL=redis://:CHANGE_ME_redis_password_here@localhost:6379

# ── InfluxDB ─────────────────────────────────────────────────
INFLUX_PASSWORD=CHANGE_ME_influx_password_here
INFLUX_TOKEN=CHANGE_ME_influx_token_here_min_16_chars
INFLUXDB_URL=http://localhost:8086
INFLUX_ORG=nhishield
INFLUX_BUCKET=activity

# ── Qdrant ───────────────────────────────────────────────────
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=CHANGE_ME_qdrant_api_key_here

# ── JWT & Encryption (MUST change in production) ─────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_generate_with_crypto_randomBytes_64
JWT_EXPIRY=24h
# Must be exactly 32 characters for AES-256-GCM
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=CHANGE_ME_32_chars_exactly_here!

# ── Frontend / CORS ──────────────────────────────────────────
FRONTEND_URL=http://localhost:80
API_URL=http://localhost:3000
REACT_APP_API_URL=${API_URL}/api

# ── mTLS (optional — leave blank to disable) ─────────────────
TLS_CERT=
TLS_KEY=
TLS_CA=
MTLS_PORT=3001

# ── SSO / OAuth (optional) ───────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
OKTA_DOMAIN=https://your-org.okta.com
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=

# ── Integration API Keys (add when enabling platforms) ───────
GITHUB_TOKEN=
GITHUB_ORG=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
OPENAI_ADMIN_KEY=
SLACK_TOKEN=
ANTHROPIC_API_KEY=

# ── Monitoring ───────────────────────────────────────────────
GRAFANA_PASSWORD=CHANGE_ME_grafana_password_here
ENABLE_METRICS=true
METRICS_PORT=9090

# ── Alerts / Notifications ────────────────────────────────────
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=
ALERT_EMAIL_PASS=
ALERT_WEBHOOK_URL=

# Vault master key (alias for ENCRYPTION_KEY — used by CredentialVault)
MASTER_KEY=CHANGE_ME_32_chars_exactly_here!
